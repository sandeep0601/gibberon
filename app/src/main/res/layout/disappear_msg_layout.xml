<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView    android:fontFamily="@font/intel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/disapear_msg"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:id="@+id/dis_msg"/>

   <!-- <view
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dis_msg"
        android:layout_marginTop="40dp"/>-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginTop="20dp"
        android:layout_below="@id/dis_msg"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:layout_height="150dp"
        android:padding="10dp"/>

    <TextView    android:fontFamily="@font/intel"
        android:layout_marginLeft="15dp"
        android:padding="5dp"
        android:id="@+id/set_status"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerView"
        android:layout_marginTop="15dp"
        android:text="@string/your_msg_not_expire"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_status"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="20dp">

        <TextView    android:fontFamily="@font/intel"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerView"
            android:layout_marginTop="25dp"
            android:text="@string/cancel"
            android:textColor="@color/colorBlue"
            android:textSize="13sp"/>

        <TextView    android:fontFamily="@font/intel"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerView"
            android:layout_marginTop="25dp"
            android:text="@string/ok"
            android:textColor="@color/colorBlue"
            android:textSize="13sp"/>


    </LinearLayout>



</RelativeLayout>